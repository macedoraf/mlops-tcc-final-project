{
  "title": "MLOps API Performance Dashboard",
  "uid": "mlops_dashboard_v2",
  "schemaVersion": 27,
  "style": "dark",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "API Request Rate (req/s) por Status Code",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10
          }
        }
      },
      "targets": [
        {
          "expr": "sum by (status) (rate(http_requests_total[1m]))",
          "legendFormat": "Status {{status}}",
          "refId": "A"
        }
      ]
    },
    {
      "id": 2,
      "title": "API Error Rate (5xx)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      },
      "targets": [
        {
          "expr": "rate(http_requests_total{status=~\"5..\"}[1m])",
          "legendFormat": "5xx Errors per Second",
          "refId": "A"
        }
      ]
    },
    {
      "id": 3,
      "title": "API Latency (p95)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "Latency p95 (s)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 4,
      "title": "Model Prediction Latency (p95)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 9
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(model_inference_latency_seconds_bucket[5m]))",
          "legendFormat": "Inference Latency p95 (s)",
          "refId": "A"
        }
      ]
    },
    {
      "id": 5,
      "title": "Model Drift Score",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2
          }
        }
      },
      "targets": [
        {
          "expr": "model_drift_score",
          "legendFormat": "Drift Score",
          "refId": "A"
        }
      ]
    },
    {
      "id": 6,
      "title": "CPU Usage (%)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": {
        "h": 9,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "targets": [
        {
          "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[2m])) * 100)",
          "legendFormat": "CPU %",
          "refId": "A"
        }
      ]
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
